{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
        "source": "/notification/**",
        "function": "notificationPage"
    },
    {
        "source": "/sendSingleNotification**",
        "function": "sendSingleNotification"
    },
    {
      "source": "/subscribeToTopic**",
      "function": "subscribeToTopic"
    },
    {
      "source": "/unsubscribeFromTopic**",
      "function": "unsubscribeFromTopic"
    },
    {
      "source": "/sendNotificationToTopic**",
      "function": "sendNotificationToTopic"
    }]
  }
}
